---
import "@fontsource/inter";
import "@fontsource/inter/500.css";
import "@fontsource/inter/600.css";
import "@fontsource/inter/700.css";
import "@fontsource/inter/800.css";
import "@fontsource/inter/900.css";


export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content="Official website of Sei The Whale 🐳 meme coin on SEI chain - Ticker $SEI" />
    <meta property="og:image" content="https://seiwhale.meme/public/seiwhaleog.png" />
    <title>{title}</title>

    <!-- Facebook Meta Tags -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://seiwhale.meme" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content="Official website of Sei The Whale 🐳 meme coin on SEI chain - Ticker $SEI" />

    <!-- Twitter Meta Tags -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content="Official website of Sei The Whale 🐳 meme coin on SEI chain - Ticker $SEI" />
    <meta name="twitter:image" content="https://seiwhale.meme/public/seiwhaleog.png" />


  </head>
  <body>
    <slot />
    <style is:global>
      html {
        font-family: Inter;
        background-color: #252629;
        overflow-x: hidden;
        scroll-behavior: smooth;
      }
    </style>
  </body>
</html>

